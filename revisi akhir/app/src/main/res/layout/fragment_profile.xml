<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.unpas.chatak.profile_page.ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bg.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="290dp"
            android:background="#00ffff"/>
        <ImageView
            android:id="@+id/bg.filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="290dp"
            android:background="#000000"
            android:alpha="0.2"/>
        <Button
            android:id="@+id/btn.pesanan.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            android:background="@drawable/outline_btn"
            android:text="Pesanan"
            android:paddingLeft="15dp"
            android:layout_below="@+id/bg.profile"
            android:textAlignment="textStart"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btn.daftarpesan.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="75dp"
            android:background="@drawable/outline_btn"
            android:text="Daftar Alamat"
            android:paddingLeft="15dp"
            android:layout_below="@+id/btn.pesanan.profile"
            android:textAlignment="textStart"
            android:textSize="25sp"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/img.profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:minHeight="120dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/nama.profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Pengguna"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/alamat.profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Alamat"
            android:textSize="20sp"
            android:paddingBottom="20dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/edit.profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:text="Edit Profile"/>
    </LinearLayout>

</FrameLayout>