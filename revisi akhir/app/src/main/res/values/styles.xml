<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bar_masuk_barang">
        <item name="android:typeface">monospace</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingRight">@dimen/padding_20dp</item>
        <item name="android:paddingLeft">@dimen/padding_20dp</item>
        <item name="android:paddingTop">@dimen/padding_5dp</item>
        <item name="android:paddingBottom">@dimen/padding_5dp</item>
    </style>

    <style name="title_masuk_barang">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_30dp</item>
        <item name="android:textColor">@color/hitam_chatak</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="value_masuk_barang">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_30dp</item>
        <item name="android:background">@drawable/outline_btn</item>
        <item name="android:layout_marginLeft">@dimen/margin_10dp</item>
        <item name="android:layout_marginRight">@dimen/margin_10dp</item>
    </style>

    <style name="sub_title_barang">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_30dp</item>
        <item name="android:textColor">@color/kuning_chatak</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Style Ringkasan Barang-->
    <style name="row_nama_bon_barang">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_5dp</item>
        <item name="android:paddingTop">@dimen/padding_15dp</item>
        <item name="android:paddingBottom">@dimen/padding_15dp</item>
    </style>

    <style name="row_item_bon_barang">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/text_5dp</item>
        <item name="android:paddingTop">@dimen/text_5dp</item>
        <item name="android:paddingBottom">@dimen/text_5dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tv_row1_ringkasan">
        <item name="android:layout_width">@dimen/text_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/hitam_chatak</item>
    </style>

    <style name="tv_row2_ringkasan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/hitam_chatak</item>
        <item name="android:text">@string/pembatas</item>
    </style>

    <style name="tv_row3_ringkasan">
        <item name="android:layout_width">@dimen/text_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/text_5dp</item>
        <item name="android:textColor">@color/hitam_chatak</item>
    </style>
    <!--end style-->

    <dimen name="text_5dp">5dp</dimen>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
